extends layout

block append styles
	link(href="/css/jquery.terminal.css",rel="stylesheet")
	link(href="/css/main.css",rel="stylesheet")

block append scripts
	script(src="/socket.io/socket.io.js")
	script(src="/js/lib/jquery.terminal.min.js")
	script(src="/js/config.js")
	script(src="/js/client.js")

block content
	.navbar.navbar-fixed-top
		.navbar-inner
			.container-fluid
				a(href="#").brand Nodesole
				ul.nav.pull-right
					li.divider-vertical
					li
						a(href="/logout") Logout
				p.navbar-text.pull-right
					span Logged in as #{locals.username}
				ul.nav
					li 
						a(href="https://github.com/cjsaylor/nodesole/wiki") Help
	.conainer-fluid
		.row-fluid
			.span8
				#terminal
			.span4
				#chat.well.well-small
					h4 Nodesole Chat
					#chat-output
					#chat-input
						form#chat-input-form(action="/",name="chat-input-form",method="post")
							textarea#chat-message(name="chat-message",autocomplete="off")
